{
  "compilerOptions": {
    "target": "es2022",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react"
  },
  "lib": [
    "dom",
    "dom.iterable",
    "es6"
  ],
  "paths": {
    "@sass" : ["./sass"],
    "@components" : ["./components"],
    "@img" : ["./img"],
    "@sass/*" : ["./sass/*"],
    "@components/*" : ["./components/*"],
    "@img/*" : ["./img/*"],
  }
}
